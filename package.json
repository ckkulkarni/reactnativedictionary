{
  "name": "dictionaryapp",
  "version": "1.0.0",
  "type": "module",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest"
  },
  "dependencies": {
    "@cucumber/cucumber": "^9.4.0",
    "@react-navigation/native": "^6.1.6",
    "@react-navigation/native-stack": "^6.9.12",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react-native": "^12.2.0",
    "@testing-library/user-event": "^14.4.3",
    "alert": "^5.1.4",
    "axios": "^1.4.0",
    "babel-jest": "^29.6.2",
    "babel-preset-react-native": "^4.0.1",
    "cucumber": "^6.0.7",
    "expo": "~49.0.7",
    "expo-av": "~13.4.1",
    "expo-modules-core": "~1.5.9",
    "expo-status-bar": "~1.6.0",
    "jest": "^29.6.2",
    "jest-cucumber": "^3.0.1",
    "jest-expo": "^49.0.0",
    "react": "18.2.0",
    "react-native": "0.72.3",
    "react-native-get-random-values": "^1.9.0",
    "react-test-renderer": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@types/jest": "^29.5.3",
    "@types/react": "~18.0.14",
    "@types/react-native": "^0.72.2",
    "@types/react-native-get-random-values": "^1.8.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.3"
  },
  "jest": {
    "preset": "jest-expo",
    "cacheDirectory": "./cache",
    "coveragePathIgnorePatterns": [
      "./app/utils/vendor"
    ],
    "testMatch": [
      "**/features/step_definitions/**/*.steps.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80
      }
    },
    "transform": {
      "\\.(js?|ts?|jsx?|tsx?)$": "babel-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!@react-native|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-native|expo-av|react-native-get-random-values|react-clone-referenced-element|react-navigation|uuid|jest-cucumber)"
    ]
  },
  "private": true
}
